<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".view.HelpActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Karty1.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Karty1.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cards Application"
                android:textColor="@color/primary_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Version 1.0"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/divider" />

            <!-- Section 1: Introduction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Introduction"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="The Cards application allows you to conveniently manage all your cards in one place. You can store loyalty cards, discount cards, membership cards, payment cards, and other types of cards."
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <!-- Section 2: Login -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="2. Login"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="When you first launch the application, you will set a password that you will use for login. This password is also used for encrypting card photos, so remember it well."
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <!-- Section 3: Main Screen -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="3. Main Screen"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="On the main screen, you can see a list of all your cards. Cards are displayed in two columns with photo previews as background. To add a new card, click the + button in the bottom right corner of the screen."
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <!-- Section 4: Adding a Card -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="4. Adding a Card"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="When adding a card, you can enter the following information:\n\n• Card name\n• Card type (loyalty, discount, membership, payment, other)\n• Card number\n• Barcode\n• Notes\n\nYou can also take photos of the front and back of the card by clicking on the respective camera icons."
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <!-- Section 5: Card Detail -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="5. Card Detail"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="By clicking on a card in the list, you can view its details. Here you can see all the information about the card, including photos of the front and back. Click on a photo to view it in full screen. If the card contains a barcode, you can display it by clicking the 'Show barcode' button."
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <!-- Section 6: Editing and Deleting Cards -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="6. Editing and Deleting Cards"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="In the card detail, you can edit the card by clicking the 'Edit' button or delete it by clicking the 'Delete' button."
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <!-- Section 7: Searching -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="7. Searching"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="To search for cards, click on the magnifying glass icon in the top bar of the application. Enter the card name and the application will display matching cards."
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <!-- Section 8: Security -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="8. Security"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="The application uses encryption to protect card photos. Photos are encrypted using the password you enter when logging in. This ensures that even if someone gains access to the application files, they will not be able to view the photos without knowing the password."
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <!-- Section 9: Contact -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="9. Contact"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Application created by PiKi, 2025.\nFor support or questions, contact the developer."
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/close_help"
        app:srcCompat="@drawable/ic_close"
        app:backgroundTint="@color/accent"
        app:elevation="6dp"
        app:fabSize="normal" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
