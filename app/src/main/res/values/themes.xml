<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Karty1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <!-- Card style -->
        <item name="cardBackgroundColor">@color/card_background</item>
        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/primary_light</item>
    </style>

    <style name="Theme.Karty1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Karty1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Karty1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Styly pro TextInputLayout ve světlém režimu -->
    <style name="Widget.Karty1.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="Widget.Karty1.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <!-- Styly pro TextView ve světlém režimu -->
    <style name="TextAppearance.Karty1.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.Karty1.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.Karty1.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <!-- Styly pro Button ve světlém režimu -->
    <style name="Widget.Karty1.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Karty1.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>